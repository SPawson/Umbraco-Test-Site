@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.SimpleContentPage>
    @using ContentModels = Umbraco.Web.PublishedModels;
    @{
        Layout = "master.cshtml";
    }

@{ 
    var firstname = "";
    var lastname = "";

    if (TempData.ContainsKey("Firstname"))
    {
        firstname = TempData["Firstname"] as string;
    }
    if (TempData.ContainsKey("Lastname"))
    {
        lastname = TempData["Lastname"] as string;
    }
}

<section id="main" class="wrapper">
    <div class="inner">
        <header class="major special">
            <h2>@Model.Value("pageTitle")</h2>
        </header>
        
        <span class="image">
            <a href="#" class=""><img src="/images/pic03.jpg" alt="" /></a>
        </span>
        <p>@Model.Value("bodyText")</p>
    </div>
</section>



<section id="main" class="wrapper">

    <div class="inner">
        @if (firstname == "" && lastname == "")
        {
            Html.RenderPartial("ContactForm", new PlainSite.ViewModels.ContactFormViewModel());
        }
        else
        {
            <p> Thank you for submitting the form @firstname @lastname</p>
        }

    </div>
</section>
